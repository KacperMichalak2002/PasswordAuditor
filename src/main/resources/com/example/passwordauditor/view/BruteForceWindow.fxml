<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="700.0" styleClass="mainContainer" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.passwordauditor.controller.BruteForceController">

    <VBox alignment="CENTER" spacing="10" styleClass="mainTitle">
        <Label text="Password Auditor" styleClass="titleHeader" />
        <Label text="Test brute force attack" styleClass="secondTitleHeader" />
    </VBox>

    <VBox maxWidth="600" spacing="15">
        <Label text="Input your password for test" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <PasswordField fx:id="targetPassword" promptText="Input password" HBox.hgrow="ALWAYS" />
        </HBox>

        <VBox maxWidth="600" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="startButton" onAction="#handleStart" text="Start" styleClass="buttons"/>
                <Button fx:id="stopButton" onAction="#handleStop" text="Stop" styleClass="buttons"/>
                <Button fx:id="backButton" onAction="#handleBackButton" text="Back" styleClass="buttons"/>
            </HBox>
        </VBox>
        <TextArea fx:id="logArea" editable="false" prefHeight="150" prefWidth="400" wrapText="true" />
    </VBox>

</VBox>
