<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20" styleClass="mainContainer" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.passwordauditor.controller.MainViewController">

    <VBox alignment="CENTER" spacing="10" styleClass="mainTitle">
        <Label text="Password Auditor" />
        <Label text="Check your password's strength" />
    </VBox>

    <!-- Input -->
    <VBox maxWidth="300" spacing="15">
        <Label text="Input your password for analysis" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <PasswordField fx:id="passwordField" promptText="Input password" HBox.hgrow="ALWAYS" />
        </HBox>

        <VBox maxWidth="300" spacing="10">
            <HBox>
                <Label text="Password strength" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="passwordStrengthLabel" text="Weak password 0%" />
            </HBox>
            <ProgressBar fx:id="progressBar" maxWidth="Infinity" progress="0" />
        </VBox>
    </VBox>

    <!-- Analysis -->
    <ScrollPane fitToWidth="true">
        <HBox fx:id="analysisHBox" alignment="CENTER" spacing="10">
            <VBox fx:id="analysisVBox" spacing="10" styleClass="vBoxAnalysis" HBox.hgrow="ALWAYS" />
        </HBox>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="bruteForceButton" onAction="#handleOpenNewWindowBruteForce" styleClass="buttons" text="Brute Force" />
        <Button fx:id="dictionaryButton" styleClass="buttons" text="Dictionary Method" />
    </HBox>

</VBox>
